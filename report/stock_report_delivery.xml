    <template id="report_delivery_document_inherit_ferrosa" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[@class='page']" position="before">

            <style>
                 .page{position: absolute !important;top: 1mm !important;}
             </style>
        </xpath>

        <!--<xpath expr="//div[@class='page']" position="attributes">
            <attribute name="style">position: fixed !important;top: 1mm !important;</attribute>
        </xpath>-->

        <xpath expr="//div[@name='div_outgoing_address']" position="replace">
            <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id">

                <div t-field="o.move_ids_without_package[0].partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>
            <div t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                <span><strong>Warehouse Address:</strong></span>
                <div t-field="o.picking_type_id.warehouse_id.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>
        </xpath>

        <xpath expr="//div[@name='div_incoming_address']" position="replace">
            <div class="col-7" name="div_incoming_address">
                <div t-if="o.picking_type_id.code=='incoming' and partner">
                    <span><strong>Direccin de proveedor:</strong></span>
                </div>
                <div t-if="o.picking_type_id.code=='internal' and partner">
                    <span><strong>Dirección de Almacén:</strong></span>
                </div>
                <div t-if="o.picking_type_id.code=='outgoing' and partner">
                    <span><strong>Sucursal:</strong></span>
                </div>
                <div t-if="o.location_id.warehouse_id.partner_id" name="partner_header">
                    <div t-field="o.location_id.warehouse_id.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "phone_icons": True}'/>
                </div>
            </div>
            <br/>
        </xpath>


        <xpath expr="//div[@class='page']/h2" position="replace">
            <div class="col-12">
                <h2  class="text-center">
                    <span t-field="o.name"/>
                </h2>
            </div>

        </xpath>
        <xpath expr="//div[@name='div_origin']" position="replace">
            <div t-if="o.origin" class="col-6" name="div_origin">
                <strong>Orden:</strong>
                <p t-field="o.origin"/>
            </div>
        </xpath>
        <xpath expr="//div[@name='div_sched_date']" position="replace">
            <div t-if="o.state" class="col-12" name="div_sched_date">
                <strong>Fecha de envio:</strong>
                <t t-if="o.state == 'done'">
                    <p t-field="o.date_done"/>
                </t>
                <t t-if="o.state != 'done'">
                    <p t-field="o.scheduled_date"/>
               </t>
            </div>


        </xpath>
        <xpath expr="//div[@class='page']/div[2]" position="after">
            <div  class="col-12">
                <p t-field="o.sale_id.client_order_ref"/>
            </div>
            <div class="col-12">
                <strong>MATERIAL DESCARGADO A PIE DE CAMIÓN.</strong>
            </div>

        </xpath>
        <xpath expr="//table[@name='stock_move_table']" position="replace">
            <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                <thead>
                    <tr>
                        <th name="th_sm_product"><strong>Cantidad</strong></th>
                        <th name="th_sm_ordered"><strong>Producto</strong></th>
                        <th name="th_sm_quantity"><strong>Precio unitario</strong></th>
                        <th name="th_sm_importe"><strong>Importe</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                    <tr t-foreach="lines" t-as="move">
                        <td class="text-center">
                            <span t-field="move.product_uom_qty"/>
                        </td>

                        <td>
                            <span t-esc="move.product_id.display_name[move.product_id.display_name.find('] ')+2:]"/>

                        </td>

                        <td>
                            <span t-field="move.sale_line_id.price_unit"/>
                        </td>
                        <td>
                            <span t-field="move.sale_line_id.price_total"/>
                        </td>
                    </tr>
                    <tr t-if="o.sale_id">
                        <td>TOTAL</td>
                        <td></td>
                        <td></td>
                        <td><span t-field="o.sale_id.amount_total"/></td>
                    </tr>
                </tbody>
            </table>

        </xpath>
        <xpath expr="//table[@name='stock_move_line_table']" position="replace">
            <table class="table table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                <t t-set="has_serial_number" t-value="False"/>
                <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_lot_on_delivery_slip"/>
                <thead>
                    <tr>
                        <th name="th_sm_product"><strong>Cantidad</strong></th>
                        <th name="th_sm_ordered"><strong>Producto</strong></th>
                        <th name="th_sm_quantity"><strong>Precio unitario</strong></th>
                        <th name="th_sm_importe"><strong>Importe</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                    <tr t-foreach="lines" t-as="move">
                        <td class="text-center">
                            <span t-field="move.product_uom_qty"/>
                        </td>

                        <td>
                            <span t-esc="move.product_id.display_name[move.product_id.display_name.find('] ')+2:]"/>

                        </td>

                        <td>
                            <span t-field="move.sale_line_id.price_unit"/>
                        </td>
                        <td>
                            <span t-field="move.sale_line_id.price_total"/>
                        </td>
                    </tr>
                    <tr t-if="o.sale_id">
                        <td>TOTAL</td>
                        <td></td>
                        <td></td>
                        <td><span t-field="o.sale_id.amount_total"/></td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
